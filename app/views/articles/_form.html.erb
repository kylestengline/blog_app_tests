  <div class='row'>
    <div class='col-md-12'>
      <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <% if @article.errors.any? %>
        <div class="panel-danger col-md-offset-1">
          <div class="panel-heading">
            <h2 class="panel-title">
              <!-- going to show the error on the page for the user to see and pluralize it as well as count how many errors there are. -->
              <%= pluralize(@article.errors.count, "error") %> 
              prohibited this article from being saved:
            </h2>

            <div class="panel-body">
              <ul>
                <% @article.errors.full_messages.each do |msg| %>
                  <li>
                    <%= msg %>
                </li>
                <% end %>  
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    <div class='form-group'>
      <div class='control-label col-md-1'>
        <%= f.label :title %>
      </div>
    <div class='col-md-11'>
      <%= f.text_field :title, class: 'form-control', placeholder: 'Title of article', autofocus: true %>
      </div>
    </div>
    <div class='form-group'>
      <div class='control-label col-md-1'>
        <%= f.label :body %>
    </div>
      <div class='col-md-11'>
          <%= f.text_area :body, rows: 10, class: 'form-control', placeholder: 'Body of article' %>
      </div>
    </div>
    <div class='form-group'>
      <div class='col-md-offset-1 col-md-11'>
        <%= f.submit class: "btn btn-primary btn-lg pull-right" %>
        <!-- <input type="submit" name="commit" value="Create Article" class="btn btn-primary btn-lg pull-right" data-disable-with="Create article"> -->
      </div>
    </div>
    <% end %>
 </div>
</div>